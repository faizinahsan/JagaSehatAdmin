<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#ffff"
        android:id="@+id/nama_lengkap"
        android:text="Nama"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent">
           <ImageView
               android:padding="16dp"
               android:paddingRight="16dp"
               android:src="@drawable/ic_gender"
               android:id="@+id/gender"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/gender"
               android:textColor="#ffff"
               android:id="@+id/gendertxt"
               android:text="Jenis Kelamin:"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/gendertxt"
               android:layout_toRightOf="@+id/gender"
               android:textColor="#ffff"
               android:text="pria"
               android:id="@+id/jk_lengkap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:padding="16dp"
               android:layout_below="@+id/gender"
               android:src="@drawable/ic_email"
               android:id="@+id/email"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/email"
               android:textColor="#ffff"
               android:layout_below="@id/gender"
               android:id="@+id/emailtxt"
               android:text="Email :"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/emailtxt"
               android:layout_toRightOf="@+id/email"
               android:textColor="#ffff"
               android:text="lala@mail.com"
               android:id="@+id/email_lenkap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:padding="16dp"
               android:layout_below="@+id/email"
               android:src="@drawable/ic_usia"
               android:id="@+id/usia"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/usia"
               android:textColor="#ffff"
               android:layout_below="@id/email"
               android:id="@+id/usiatxt"
               android:text="Usia :"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/usiatxt"
               android:layout_toRightOf="@+id/usia"
               android:id="@+id/usia_lenkap"
               android:textColor="#ffff"
               android:text="10 Tahun"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
       <RelativeLayout
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent">
           <ImageView
               android:padding="16dp"
               android:paddingRight="16dp"
               android:src="@drawable/ic_job"
               android:id="@+id/pekerjaan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/pekerjaan"
               android:textColor="#ffff"
               android:id="@+id/pekerjaantxt"
               android:text="Pekerjaan:"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/pekerjaantxt"
               android:layout_toRightOf="@+id/pekerjaan"
               android:textColor="#ffff"
               android:text="Jobless"
               android:id="@+id/pekerjaan_lenkap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:padding="16dp"
               android:layout_below="@+id/pekerjaan"
               android:src="@drawable/ic_pendidikan"
               android:id="@+id/pendidikan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/pekerjaan"
               android:textColor="#ffff"
               android:layout_below="@id/pekerjaan"
               android:id="@+id/pendidikantxt"
               android:text="Pendidikan :"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/pendidikantxt"
               android:layout_toRightOf="@+id/pendidikan"
               android:textColor="#ffff"
               android:text="Student"
               android:id="@+id/pendidikan_lenkap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:padding="16dp"
               android:layout_below="@+id/pendidikan"
               android:src="@drawable/ic_date"
               android:id="@+id/date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_toRightOf="@+id/date"
               android:textColor="#ffff"
               android:layout_below="@id/pendidikan"
               android:id="@+id/datetxt"
               android:text="Tanggal Isi :"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/datetxt"
               android:layout_toRightOf="@+id/date"
               android:textColor="#ffff"
               android:text="10 Juli 2018"
               android:id="@+id/date_lenkap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>